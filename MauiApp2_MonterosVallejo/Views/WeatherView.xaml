<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2_MonterosVallejo.Views.WeatherView"
             Title="Clima">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Clima Actual" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Hora:" FontSize="18"/>
            <Label Text="{Binding WeatherDataInfo.current.time}" FontSize="18" />

            <Label Text="Temperatura (Â°C):" FontSize="18"/>
            <Label Text="{Binding WeatherDataInfo.current.temperature_2m}" FontSize="18" />

            <Label Text="Humedad (%):" FontSize="18"/>
            <Label Text="{Binding WeatherDataInfo.current.relative_humidity_2m}" FontSize="18" />

            <Label Text="Lluvia (mm):" FontSize="18"/>
            <Label Text="{Binding WeatherDataInfo.current.rain}" FontSize="18" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
